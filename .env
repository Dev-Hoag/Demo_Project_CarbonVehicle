# Application
APP_NAME=Certificate Service
APP_VERSION=1.0.0
APP_PORT=3009
DEBUG=True

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=rootpassword
DB_NAME=certificate_service_db

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_EXCHANGE=carbon_credit_exchange
