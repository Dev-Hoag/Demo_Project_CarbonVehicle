# ======================================
# Application
# ======================================
APP_NAME=Certificate Service
APP_VERSION=1.0.0
APP_PORT=3009
DEBUG=True

# ======================================
# Database (use container hostname)
# ======================================
DB_HOST=certificate-mysql
DB_PORT=3306
DB_USER=certuser
DB_PASSWORD=certpassword
DB_NAME=certificate_service_db

# ======================================
# RabbitMQ (use container hostname)
# ======================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_EXCHANGE=carbon_exchange
RABBITMQ_QUEUE=certificate_queue

# ======================================
# JWT Secret
# ======================================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ======================================
# File Storage
# ======================================
UPLOAD_DIR=./uploads
TEMPLATE_DIR=./templates
MAX_FILE_SIZE=10485760

# ======================================
# External Services
# Nếu muốn gọi Verification Service từ container
# ======================================
VERIFICATION_SERVICE_URL=http://verification-service:8006
USER_SERVICE_URL=http://user-service:3001
NOTIFICATION_SERVICE_URL=http://notification-service:3006

# ======================================
# PDF Generation
# ======================================
PDF_AUTHOR=Carbon Credit Platform
PDF_SUBJECT=Carbon Credit Certificate

# ======================================
# Logging
# ======================================
LOG_LEVEL=INFO
