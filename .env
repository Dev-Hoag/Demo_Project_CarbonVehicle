# Application
PORT=8006
DEBUG=True
APP_ENV=development

# Database (Docker service name)
DB_HOST=verification-mysql
DB_PORT=3306
DB_USER=root
DB_PASSWORD=rootpassword
DB_NAME=verification_db

# JWT
JWT_SECRET_KEY=super-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Logging
LOG_LEVEL=INFO

# Event Bus (Optional)
EVENT_BUS_TYPE=kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_GROUP_ID=verification-service-group

# External Services (Optional)
MRV_SERVICE_URL=http://mrv-service:8003
REGISTRY_SERVICE_URL=http://registry-service:8007
NOTIFICATION_SERVICE_URL=http://notification-service:8010