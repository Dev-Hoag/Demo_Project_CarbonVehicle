# Application
PORT=3007
NODE_ENV=development
SERVICE_NAME=payment-service

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=payment_service_db
DB_SYNC=false
DB_LOGGING=true

# VNPay Sandbox (Đăng ký tại: https://sandbox.vnpayment.vn/)
VNPAY_TMN_CODE=YOUR_TMN_CODE_HERE
VNPAY_HASH_SECRET=YOUR_HASH_SECRET_HERE
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3007/api/payments/vnpay/callback
VNPAY_IPN_URL=http://localhost:3007/api/payments/vnpay/ipn

# MoMo (for future)
MOMO_PARTNER_CODE=
MOMO_ACCESS_KEY=
MOMO_SECRET_KEY=
MOMO_API_URL=https://test-payment.momo.vn

# Payment Config
PAYMENT_EXPIRY_MINUTES=15
MAX_RETRY_COUNT=3

# Internal API (service-to-service)
INTERNAL_API_KEY=payment-service-internal-secret-key-change-in-production

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=*

# Event Bus (RabbitMQ/Kafka) - For future
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=carbon-credit-events

# Logging
LOG_LEVEL=debug

