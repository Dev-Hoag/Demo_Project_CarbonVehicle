FROM node:18

# Install minimal deps (node only). We'll mount the repo and run npm install at build time
WORKDIR /usr/src/app

# Copy package.json first for caching
COPY package.json package-lock.json* ./
RUN npm install --no-audit --no-fund

# Copy rest of files
COPY . .

# Make wait script executable
RUN chmod +x /wait-for-it.sh

CMD ["npm", "run", "migrate"]
